ramp-used-7 = "%{F#f70064}%{F-}"

[module/network]
type = internal/network
interface = wlo1
interval = 2

label-connected = " %downspeed%   %upspeed%"
label-disconnected = "%{F#f70064}%{F-} Disconnected"

