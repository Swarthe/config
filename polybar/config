;
; Global settings
;

[colors]
;background = ${xrdb:color0:#222}
background = #33383c4a
background-alt = #404552
;foreground = ${xrdb:color7:#222}
foreground = #eeeeee
foreground-alt = #fff
; Arc-Dark colours
primary = #5294e2
secondary = #f70064
alert = #bd2c40

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

;
; Bars
;

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 24
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 5
module-margin-right = 5

font-0 = NotoSans:size=10;1
font-1 = FontAwesome5Free:style=Solid:size=10;1
font-2 = NotoSans:style:Bold:size=10;1
;font-3 = FontAwesome5Free:style=Regular:size=10;1
;font-4 = FontAwesome5Brands:style=Regular:size=10;1

modules-left = i3 xwindow
modules-center = media
modules-right = update update-refresh update-ipc microphone pulseaudio network gpu gpu-temp memory cpu cpu-temp date

enable-ipc = true

tray-position = right
;tray-detached = true
;tray-offset-x = -2115
tray-padding = 2

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

;
; Modules
;

[module/media]
type = custom/script
exec = $XDG_CONFIG_HOME/polybar/script/media.sh
interval = 0.1

[module/update]
type = custom/script
exec = polybar-msg hook update-ipc 1
; Wait 5 hours between checks
interval = 18000
label =

; monitor pacman log
[module/update-refresh]
type = custom/script
exec = $XDG_CONFIG_HOME/polybar/script/update.sh -r
label =

; check updates if pacman operations have occurred
[module/update-ipc]
type = custom/ipc
hook-0 = $XDG_CONFIG_HOME/polybar/script/update.sh

[module/microphone]
type = custom/script
exec = $XDG_CONFIG_HOME/polybar/script/microphone.sh
interval = 0.1

[module/pulseaudio]
type = internal/pulseaudio

; Red if volume is low or null
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-muted = "%{F#f70064}%{F-}"

ramp-volume-0 = "%{F#f70064}%{F-}"
ramp-volume-1 = 
ramp-volume-2 = 

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 120

;[module/xkeyboard]
;type = internal/xkeyboard
;blacklist-0 = num lock
;
;format-prefix = " "
;format-prefix-foreground = ${colors.foreground-alt}
;format-prefix-overline = ${colors.secondary}
;
;label-layout = %layout%
;label-layout-overline = ${colors.secondary}
;
;label-indicator-padding = 2
;label-indicator-margin = 1
;label-indicator-background = ${colors.secondary}
;label-indicator-overline = ${colors.secondary}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true

;wrapping-scroll = false
enable-click = false
enable-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode = "%{T3}%mode%%{T-}"
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = "%{T3}%index%%{T-}"
label-focused-padding = 2
label-focused-foreground = #000
label-focused-background = ${colors.primary}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

[module/cpu]
type = internal/cpu
interval = 2
label = %percentage%%
format = <ramp-load> <label>

ramp-load-0 = 
ramp-load-1 = 
ramp-load-2 = 
ramp-load-3 = 
ramp-load-4 = 
ramp-load-5 = 
ramp-load-6 = "%{F#f70064}%{F-}"
ramp-load-7 = "%{F#f70064}%{F-}"

[module/memory]
