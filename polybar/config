[module/date]
type = internal/date
interval = 5

time = "%H:%M"
date = "%a %d %b"

;time-alt =
;date-alt = " %a, %d %b"

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}

; Space before label is required for margin with prefix
label = " %date%   %time%"

[module/cpu-temp]
type = internal/temperature
base-temperature = 0
warn-temperature = 80
interval = 2

hwmon-path = /sys/class/hwmon/hwmon1/temp1_input

format = <ramp> <label>
format-warn = <ramp> <label-warn>
;format-warn-overline = ${self.format-overline}

label = %temperature-c%
label-warn = %temperature-c%

ramp-0 = 
ramp-1 = 
ramp-2 = "%{F#f70064}%{F-}"

[module/gpu-temp]
type = internal/temperature
base-temperature = 0
warn-temperature = 80
interval = 2

hwmon-path = /sys/class/hwmon/hwmon3/temp1_input

format = <ramp> <label>
format-warn = <ramp> <label-warn>
;format-warn-overline = ${self.format-overline}

label = %temperature-c%
label-warn = %temperature-c%

ramp-0 = 
ramp-1 = 
ramp-2 = "%{F#f70064}%{F-}"

[module/gpu]
type = custom/script
exec = /usr/bin/sh -c 'echo $(cat /sys/class/drm/card0/device/gpu_busy_percent)%'

interval = 2
format-prefix = " "
